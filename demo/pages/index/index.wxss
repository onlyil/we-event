/**index.wxss**/
.container {
  padding: 0 30rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 30px;
}
.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 92rpx;
  margin-top: 20rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  background: #eee;
}
.placeholder {
  color: #aaa;
}
.btn {
  margin-top: 30rpx;
}
.info {
  margin-top: 80rpx;
  text-align: center;
}